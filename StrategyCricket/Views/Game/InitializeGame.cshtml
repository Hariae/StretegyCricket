@using StrategyCricket.Models
@model GameViewModel
@{
    ViewBag.Title = "InitializeGame";
   

}

@using (Html.BeginForm("GameSimulator", "Game", FormMethod.Post))
{

    <p>Team 1</p> <br />
    for (int i = 0; i < 11; i++)
    {

        @Html.TextBoxFor(x => x.Team_1_BatsmenIds[i])
         <br />
    }

    <p>Team 2</p> <br />
    for (int j = 0; j < 11; j++)
    {

        @Html.TextBoxFor(x => x.Team_2_BatsmenIds[j])
        <br />
    }

    <p>Team 1 Bowling Overs</p> <br />
    for (int k = 0; k < 20; k++)
    {

        @Html.TextBoxFor(x => x.Team_1_BowlerIds[k])
         <br />
    }

    <p>Team 2 Bowling Overs</p> <br />
    for (int l = 0; l < 20; l++)
    {

        @Html.TextBoxFor(x => x.Team_2_BowlerIds[l])
        <br />
    }

    <input type = "submit" value = "Upload" />

}

